    "ElasticsearchDockerImage" : {
      "Description" : "Path to the Elasticsearch image to use (format: '[<registry>[:<port>]/]<repository>[:<version>]')",
      "Type" : "String",
      "Default" : "dockerfile/elasticsearch"
